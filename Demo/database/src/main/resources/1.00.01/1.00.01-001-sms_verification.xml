<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	
    <property name="autoIncrement" value="false" dbms="postgresql,mssql,oracle"/>
    <property name="autoIncrement" value="true" dbms="h2"/>

    <changeSet id="1.00.01-001-0001-sequence" author="vluzhnykh" context="update" runInTransaction="false"
               objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="sms_verification_id_seq"/>
            </not>
        </preConditions>

        <createSequence sequenceName="sms_verification_id_seq" incrementBy="1" startValue="1"/>
    </changeSet>

    <changeSet id="1.00.01-001-0002-table" author="vluzhnykh" context="update" runInTransaction="false"
               objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="sms_verification"/>
            </not>
        </preConditions>

        <createTable tableName="sms_verification" remarks="">
            <column name="verificationid" type="numeric(15,0)" remarks="PrimaryKey autogenerated"
                    autoIncrement="${autoIncrement}"
                    defaultValueSequenceNext="sms_verification_id_seq">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_sms_verification"/>
            </column>
            <column name="processguid" type="VAERCHAR(50)"/>
            <column name="phonenumber" type="VARCHAR(50)"/>
            <column name="secretcode" type="VARCHAR(50)"/>
            <column name="status" type="VARCHAR(50)"/>
        </createTable>
        
        <createIndex tableName="sms_verification" indexName="ix_sms_verification_processguid" unique="true">
            <column name="processguid"/>
        </createIndex>

        <createIndex tableName="sms_verification" indexName="ix_sms_verification_secretcode_status" unique="false">
            <column name="secretcode"/>
            <column name="status"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>